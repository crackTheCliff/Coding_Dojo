@{
    ViewData["Title"] = "Home Page";
}
@model Survey
<div class="d-flex justify-content-center m-5">
    <form asp-action="results" asp-controller="Home" method="post">
        <div class="d-flex flex-column mt-2">
            <span asp-validation-for="name"></span><br>
            <label asp-for="name">Name:</label>
            <input asp-for="name" class="form-control" />
        </div>
        <div class="d-flex flex-column mt-2">
            <span asp-validation-for="location"></span><br>
            <label asp-for="location">Location: </label>
            <select asp-for="location" class="form-control">
                <option value="" selected disabled hidden>Select a option</option>
                <option value="New Orleans">New Orleans</option>
                <option value="Orlando">Orlando</option>
                <option value="Boston">Boston</option>
                <option value="San Jose">San Jose</option>
                <option value="Chicago">Chicago</option>
            </select>
        </div>
        <div class="d-flex flex-column mt-2">
            <span asp-validation-for="language"></span><br>
            <label asp-for="language">Favorite Language:</label>
            <select asp-for="language" class="form-control">
                <option value="" selected disabled hidden>Select a option</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
            </select>
        </div>
        <div class="d-flex flex-column mt-2">
            <span asp-validation-for="comment"></span><br>
            <label asp-for="comment">Comment: (Optional)</label>
            <textarea asp-for="comment" class="form-control"></textarea>
        </div>
        <input type="submit" value="Submit" class="btn btn-success mt-4" />
    </form>
</div>